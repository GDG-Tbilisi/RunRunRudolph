<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:text="Statistics"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="65px" android:textColor="#FF0000"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_weight="1.39" android:stackFromBottom="true" android:soundEffectsEnabled="true" android:smoothScrollbar="true" android:scrollingCache="true" android:scrollbarStyle="insideInset">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/shareButton"
            android:layout_width="88dp"
            android:layout_height="85dp"
            android:layout_weight="0.05"
            android:text="Share Score" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_weight="0.05"
            android:text="Restart" />
    </LinearLayout>

</LinearLayout>